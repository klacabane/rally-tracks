  {
    "name": "esql",
    "description": "Indexes the datasets, then runs esql queries while inserting the same dataset",
    "default": false,
    "schedule": [
      {
        "name": "delete-all-datastreams",
        "operation": {
          "operation-type": "delete-data-stream"
        }
      },
      {
        "name": "delete-all-composable-templates",
        "operation": {
          "operation-type": "delete-composable-template"
        }
      },
      {
        "name": "create-all-templates",
        "operation": {
          "operation-type": "create-composable-template",
          "request-params": {
            "create": "true"
          }
        }
      },
      {
        "name": "put-timestamp-pipeline",
        "operation": {
          "operation-type": "put-pipeline",
          "id": "timestamp_pipeline",
          "body": {
            "processors": [
                {
                    "set": {
                        "field": "@timestamp",
                        "value": {{'"{{_ingest.timestamp}}"'}}
                    }
                },
                {
                  "script": {
                    "source": "Random r  = new Random();ctx['kubernetes']['pod']['uid'] = 'value-' + r.nextLong();"
                  }
                }
            ]
          }
        }
      },
      {
        "name": "check-cluster-health",
        "operation": {
          "operation-type": "cluster-health",
          "request-params": {
            "wait_for_status": "{{cluster_health | default('green')}}",
            "wait_for_no_relocating_shards": "true"
          },
          "retry-until-success": true
        }
      },
      {
        "parallel": {
          "tasks": [
            {
              "operation": "index-pod",
              "warmup-time-period": 120,
              "clients": {{bulk_indexing_clients | default(8)}}
            },
            {
              "operation": "index-pod-2",
              "warmup-time-period": 120,
              "clients": {{bulk_indexing_clients | default(8)}}
            }
          ]
        }
      },
      {
        "name": "refresh-after-index",
        "operation": "refresh"
      },
      {
        "operation": {
          "operation-type": "force-merge",
          "request-timeout": 7200{%- if force_merge_max_num_segments is defined %},
          "max-num-segments": {{ force_merge_max_num_segments | tojson }}
          {%- endif %}
        }
      },
      {
        "name": "wait-until-merges-finish",
        "operation": {
          "operation-type": "index-stats",
          "index": "_all",
          "condition": {
            "path": "_all.total.merges.current",
            "expected-value": 0
          },
          "retry-until-success": true,
          "include-in-reporting": false
        }
      },
      {
        "name": "refresh-after-force-merge",
        "operation": "refresh"
      },
      {# serverless-post-ingest-sleep-marker-start #}{%- if post_ingest_sleep|default(false) -%}
      {
        "name": "post-ingest-sleep",
        "operation": {
          "operation-type": "sleep",
          "duration": {{ post_ingest_sleep_duration|default(30) }}
        }
      },
      {%- endif -%}{# serverless-post-ingest-sleep-marker-end #}
      {
        "parallel": {
          "completed-by": "esql_single_source-limit-1000_optimized",
          "clients": 2,
          "tasks": [
            {
              "name": "esql_touch-pod-1",
              "operation": "touch-pod-index",
              "clients": {{touch_bulk_indexing_clients}},
              "target-interval": {{target_interval}}
            },
            {
              "operation": "esql_single_source-limit-1000_optimized",
              "warmup-iterations": {{search_warmup_iterations}},
              "iterations": {{search_iterations}},
              "target-interval": {{target_interval}},
              "clients": 1
            }
          ]
        }
      },
      {
        "parallel": {
          "completed-by": "esql_single_source-limit-1000_non-optimized",
          "clients": 2,
          "tasks": [
            {
              "name": "esql_touch-pod-5",
              "operation": "touch-pod-index",
              "clients": {{touch_bulk_indexing_clients}}
            },
            {
              "operation": "esql_single_source-limit-1000_non-optimized",
              "warmup-iterations": {{search_warmup_iterations}},
              "iterations": {{search_iterations}},
              "target-interval": {{target_interval}},
              "clients": 1
            }
          ]
        }
      },
      {
        "parallel": {
          "completed-by": "esql_two_sources-limit-1000",
          "clients": 3,
          "tasks": [
            {
              "name": "esql_touch-pod-9",
              "operation": "touch-pod-index",
              "clients": {{touch_bulk_indexing_clients}}
            },
            {
              "name": "esql_touch-pod-10",
              "operation": "touch-pod-index-2",
              "clients": {{touch_bulk_indexing_clients}}
            },
            {
              "operation": "esql_two_sources-limit-1000",
              "warmup-iterations": {{search_warmup_iterations}},
              "iterations": {{search_iterations}},
              "target-interval": {{target_interval}},
              "clients": 1
            }
          ]
        }
      }
    ]
  }
